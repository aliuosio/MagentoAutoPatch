<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="patch_update" xsi:type="object">Osio\MagentoAutoPatch\Console\UpdatePatches</item>
            </argument>
        </arguments>
    </type>
    <type name="Osio\MagentoAutoPatch\Model\Logger\CustomLogger">
        <arguments>
            <argument name="name" xsi:type="string">custom</argument>
            <argument name="handlers" xsi:type="array">
                <item name="custom" xsi:type="object">Osio\MagentoAutoPatch\Model\Logger\CustomHandler</item>
            </argument>
        </arguments>
    </type>
    <type name="Osio\MagentoAutoPatch\Model\Logger\CustomHandler">
        <arguments>
            <argument name="filePath" xsi:type="string">var/log/auto-patch.log</argument>
        </arguments>
    </type>
</config>
